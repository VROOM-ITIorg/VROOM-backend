@using VROOM.Repositories
@using VROOM.ViewModels;
@using VROOM.Models;
@model AdminCreateRiderVM

@{
    ViewData["Title"] = "Create Business Owner";
    var owners = ViewData["AllOwners"] as List<BusinessOwner>;

}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-bold my-2">Create New Rider</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" asp-controller="Rider" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- BusinessID & UserID -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <select asp-for="BusinessName" class="form-select">
                                        @foreach(var item in owners){
                                            <option value="@item.User?.Name">@item.User?.Name</option>
                                        }
                                    </select>
                                    <label asp-for="BusinessName"></label>
                                    <span asp-validation-for="BusinessName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="User Name" />
                                    <label asp-for="Name"></label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Status & Type -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<RiderStatusEnum>()">
                                        <option value=""></option>
                                    </select>
                                    <label asp-for="Status"></label>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="VehicleType" class="form-select" asp-items="Html.GetEnumSelectList<VehicleTypeEnum>()">
                                        <option value=""></option>
                                    </select>
                                    <label asp-for="VehicleType"></label>
                                    <span asp-validation-for="VehicleType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Vehicle & Location -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Location" class="form-control" placeholder="Current Location" />
                                    <label asp-for="Location"></label>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Experience Level & Rating -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="number" class="form-control" name="name" value="" asp-for="ExperienceLevel" />
                                    <label asp-for="ExperienceLevel"></label>
                                    <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                     

                        <!-- Profile Picture -->
                        <div class="mb-4">
                            <label asp-for="ProfilePicture" class="form-label fw-bold">Profile Image</label>
                            <div class="input-group">
                                <input asp-for="ProfilePicture" type="file" class="form-control" accept="image/*" />
                                <label class="input-group-text" for="ProfilePicture">
                                    <i class="bi bi-upload"></i>
                                </label>
                            </div>
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            <img id="imagePreview" class="img-thumbnail mt-2" style="max-height: 200px; display: none;" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-plus"></i> Create Rider
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('#ProfilePicture').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.querySelector('#imagePreview').src = e.target.result;
                    document.querySelector('#imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>


}
