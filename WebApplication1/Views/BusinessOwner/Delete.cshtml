@model YourNamespace.Models.BusinessOwner

<h2>Confirm Delete</h2>

<div>
    <h4>Are you sure you want to delete this business owner?</h4>
    <dl class="row">
        <dt class="col-sm-2">Bank Account:</dt>
        <dd class="col-sm-10">@Model.BankAccount</dd>

        <dt class="col-sm-2">Business Type:</dt>
        <dd class="col-sm-10">@Model.BusinessType</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BusinessID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
