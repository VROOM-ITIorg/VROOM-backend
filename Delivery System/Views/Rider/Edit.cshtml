@using VROOM.Models
@using VROOM.ViewModels
@model AdminEditRiderVM

@{
    ViewData["Title"] = "Edit Rider";
    var owners = ViewData["AllOwners"] as List<BusinessOwner>;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-bold my-2">Edit Rider</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="Rider" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Hidden ID field -->
                        <input type="hidden" asp-for="UserID" />

                        <!-- BusinessID & UserID -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <select asp-for="BusinessName" class="form-select">
                                        @foreach (var item in owners)
                                        {
                                            <option value="@item.User.Name">@item.User.Name</option>
                                        }
                                    </select>
                                    <label asp-for="BusinessName"></label>
                                    <span asp-validation-for="BusinessName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <input asp-for="UserName" class="form-control" placeholder="User Name" />
                                    <label asp-for="UserName"></label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Status & Type -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<RiderStatusEnum>()">
                                        <option value=""></option>
                                    </select>
                                    <label asp-for="Status"></label>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="VehicleType" class="form-select" asp-items="Html.GetEnumSelectList<VehicleTypeEnum>()">
                                        <option value=""></option>
                                    </select>
                                    <label asp-for="VehicleType"></label>
                                    <span asp-validation-for="VehicleType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Phone Number & Location -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="PhoneNumber"></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Location" class="form-control" placeholder="Current Location" />
                                    <label asp-for="Location"></label>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Experience Level & Email -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input type="number" class="form-control" asp-for="ExperienceLevel" />
                                    <label asp-for="ExperienceLevel"></label>
                                    <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Current Profile Picture & Upload New -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Current Profile Image</label>
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" class="img-thumbnail" style="max-height: 200px;" />
                                }
                                else
                                {
                                    <div class="alert alert-secondary">No profile image available</div>
                                }
                            </div>

                            <label asp-for="ProfilePicture" class="form-label fw-bold">Upload New Profile Image</label>
                            <div class="input-group">
                                <input asp-for="ProfilePicture" type="file" class="form-control" accept="image/*" />
                                <label class="input-group-text" for="ProfilePicture">
                                    <i class="bi bi-upload"></i>
                                </label>
                            </div>
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            <img id="imagePreview" class="img-thumbnail mt-2" style="max-height: 200px; display: none;" />
                            <small class="text-muted">Leave empty to keep the current image</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('#ProfilePicture').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.querySelector('#imagePreview').src = e.target.result;
                    document.querySelector('#imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}