@model ViewModels.AddBusinessOwnerViewModel
<h2>Business Owners</h2>

<form asp-action="Add" method="post">
	<div class="form-group">
		<label class="form-label" asp-for="BankAccount">BankAccount</label>
			<input type="text" asp-for="BankAccount" />
		
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="BusinessType">BusinessType</label>
		<input type="text" asp-for="BusinessType" />

	</div>
	<div class="form-group">
		<label class="form-label" asp-for="UserID">UserID</label>
		<input type="text" asp-for="UserID" />

	</div>

	<button type="submit" class="btn btn-primary" value="Add New BusinessOwner">Submit</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>