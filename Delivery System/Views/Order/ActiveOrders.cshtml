@* @using VROOM.ViewModels *@
@* @model List<OrderDetailsViewModel> *@
@* @{ *@
@*     ViewData["Title"] = "Active Orders"; *@
@* } *@

@* <div class="container-fluid"> *@
@*     <h2 class="mb-3 text-primary">Active Orders</h2> *@
@*     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> *@

@*     <div class="table-responsive"> *@
@*         <table class="table table-striped table-bordered align-middle text-center shadow-sm rounded overflow-hidden"> *@
@*             <thead class="bg-dark text-white"> *@
@*                 <tr> *@
@*                     <th>Title</th> *@
@*                     <th>Business Owner</th> *@
@*                     <th>Customer</th> *@
@*                     <th>Rider</th> *@
@*                     <th>Priority</th> *@
@*                     <th>State</th> *@
@*                     <th>Is Breakable</th> *@
