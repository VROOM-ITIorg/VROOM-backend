@model List<YourNamespace.Models.BusinessOwner>
<h2>Business Owners</h2>
<a asp-action="Add" class="btn btn-primary">Add New</a>

<table class="table">
    <thead>
        <tr>
            <th>Business ID</th>
            <th>User ID</th>
            <th>Bank Account</th>
            <th>Business Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var owner in Model)
        {
            <tr>
                <td>@owner.BusinessID</td>
                <td>@owner.UserID</td>
                <td>@owner.BankAccount</td>
                <td>@owner.BusinessType</td>
                <td>
                    <a asp-action="Details" asp-route-id="@owner.BusinessID" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@owner.BusinessID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@owner.BusinessID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>