@*             </thead> *@
@*             <tbody> *@
@*                 @foreach (var order in Model) *@
@*                 { *@
@*                     <tr class="table-light"> *@
@*                         <td class="fw-bold">@order.Title</td> *@
@*                         <td>@order.BusinessOwner</td> *@
@*                         <td>@order.CustomerName</td> *@
@*                         <td>@order.RiderName</td> *@
